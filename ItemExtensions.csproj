  <PropertyGroup>
    <LangVersion>11.0</LangVersion>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <!-- NuGet Package References -->
    <PackageReference Include="Harmony" />
    <PackageReference Include="xTile" />

    <!-- Local or Manually Referenced DLLs -->
